{
  "name": "xslutil",
  "version": "1.0.0",
  "description": "xslutil.js build environment with Node.js",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "sass:build": "sass ../../src/scss/xslutil.scss ../../dist/xslutil.css",
    "sass:watch": "sass --watch ../../src/scss/xslutil.scss ../../dist/xslutil.css",
    "js:build": "browserify index.js --standalone xslutil -o ../../dist/xslutil.js && cd ../../dist && uglifyjs xslutil.js --compress --mangle -o xslutil.min.js --source-map url=xslutil.min.js.map"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "xslutil",
    "doc",
    "xsl",
    "xslet"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xslet/xslutil.git"
  },
  "author": "Takayuki Sato",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^17.0.0",
    "eslint": "^8.8.0",
    "sass": "^1.49.7",
    "uglify-js": "^3.15.0"
  }
}
