<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="application/xml" href="unit.test.xsl"?>

<unit-test title="ut:repeat">

  <assert-equal name="ut:repeat">
   <string></string>
   <count></count>
   <expect></expect>
  </assert-equal>

  <assert-equal name="ut:repeat">
   <string>ABC</string>
   <count>0</count>
   <expect></expect>
  </assert-equal>

  <assert-equal name="ut:repeat">
   <string>ABC</string>
   <count>1</count>
   <expect>ABC</expect>
  </assert-equal>

  <assert-equal name="ut:repeat">
   <string>ABC</string>
   <count>2</count>
   <expect>ABCABC</expect>
  </assert-equal>

  <assert-equal name="ut:repeat">
   <string>ABC</string>
   <count>5</count>
   <expect>ABCABCABCABCABC</expect>
  </assert-equal>

</unit-test>
